{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "mocha --require esm --recursive '__test__/**/*.test.js'",
    "start": "node index.js",
    "dev": "nodemon index.js",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "setup": "node setupProject.js",
    "clear": "mocha --clearCache"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "2.8.5",
    "dotenv": "16.4.5",
    "express": "4.18.3"
  },
  "devDependencies": {
    "@types/supertest": "6.0.2",
    "chai": "5.1.0",
    "chai-http": "4.4.0",
    "esm": "3.2.25",
    "mocha": "10.3.0",
    "morgan": "1.10.0",
    "nodemon": "3.1.0",
    "standard": "17.1.0"
  },
  "eslintConfig": {
    "eslintConfig": {
      "extends": [
        "./node_modules/standard/eslintrc.json"
      ],
      "env": {
        "mocha": true
      },
      "globals": {
        "expect": "readonly",
        "assert": "readonly"
      },
      "overrides": [
        {
          "files": [
            "__test__/**/*.test.js"
          ],
          "extends": [
            "plugin:chai/recommended"
          ],
          "plugins": [
            "chai"
          ]
        }
      ]
    }
  }
}
